{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Test (Windows)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceRoot}/build/debug/tests/${input:testName}.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceRoot}",
      "environment": [],
    },
    {
      "name": "Debug Test (Linux)",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceRoot}/build/debug/tests/${input:testName}",
      "args": [],
      "cwd": "${workspaceRoot}",
      "env": {
        "ASAN_OPTIONS": "detect_leaks=0:disable_coredump=0",
        "LSAN_OPTIONS": "detect_leaks=0"
      }
    },
    {
      "name": "Sanitize Test (Linux)",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceRoot}/build/sanitized/tests/${input:testName}",
      "args": [],
      "cwd": "${workspaceRoot}",
    },
  ],
  "inputs": [
    {
      "id": "testName",
      "type": "promptString",
      "description": "Test Name",
      "default": "default",
    }
  ]
}
