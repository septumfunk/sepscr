{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 28
  },

  "configurePresets": [
    {
      "name": "debug-linux-llvm",
      "displayName": "Debug (Linux+LLVM)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "clang"
      }
    },
    {
      "name": "sanitized-linux-llvm",
      "displayName": "Debug+Sanitizers (Linux+LLVM)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/sanitized",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ENABLE_SANITIZERS": "ON",
        "CMAKE_C_COMPILER": "clang"
      }
    },

    {
      "name": "debug-linux-gnu",
      "displayName": "Debug (Linux+GNU)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "gcc"
      }
    },
    {
      "name": "sanitized-linux-gnu",
      "displayName": "Debug+Sanitizers (Linux+GNU)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/sanitized",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ENABLE_SANITIZERS": "ON",
        "CMAKE_C_COMPILER": "gcc"
      }
    },

    {
      "name": "debug-default",
      "displayName": "Debug (Default Compiler)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "sanitized-default",
      "displayName": "Debug+Sanitizers (Default Compiler)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/sanitized",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ENABLE_SANITIZERS": "ON"
      }
    }
  ]
}
